<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9966CC"
    android:orientation="vertical"
    android:padding="15dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/hint_name"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/sign_up_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:imeOptions="actionGo"
                android:inputType="text"
                android:padding="7dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="User Id"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <EditText
               android:id="@+id/sign_up_user_id_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:imeOptions="actionGo"
                 android:visibility="gone"
                android:padding="7dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="*Password"
                 android:visibility="gone"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/sign_up_password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:ellipsize="end"
                 android:visibility="gone"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:padding="7dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="*Confirm Password"
                 android:visibility="gone"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/sign_up_confirm_password_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                 android:visibility="gone"
                android:padding="7dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/email_id"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/sign_up_email_id_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                android:padding="7dp"
                android:singleLine="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="@string/hint_settings_ph"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/sign_up_phone_number_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@android:color/white"
                android:ellipsize="end"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:padding="7dp"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/signup_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_sign_cancel"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Cancel"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/signup_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:background="@drawable/bg_signup_register"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text=" Register "
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>